<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ccrua.riccijump</id>
    <name>RicciJump</name>
    <vendor>cc-rua</vendor>

    <depends>com.intellij.modules.platform</depends>
    <!--    添加代码依赖-->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.ccrua.riccijump.services.JumpApplicationService"/>
        <projectService serviceImplementation="com.github.ccrua.riccijump.services.JumpProjectService"/>
        <notificationGroup id="Custom Notification Group"
                           displayType="BALLOON"/>
    </extensions>

    <!--    添加代码模板-->
    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="/liveTemplates/javaTemplates.xml"/>
        <liveTemplateContext
                implementation="com.intellij.codeInsight.template.EverywhereContextType"/>
    </extensions>

    <!--    添加ide监听-->
    <applicationListeners>
        <listener class="com.github.ccrua.riccijump.listeners.JumpProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <!--    添加相应动作-->
    <actions>
        <action id="ricci_jump_alter" class="com.github.ccrua.riccijump.action.AlterAction" text="打印hhh"
                description="Alter hhh">
            <add-to-group group-id="HelpMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
        </action>

        <action id="jumpToProto" class="com.github.ccrua.riccijump.action.JumpAction" text="JumpAction"
                description="JumpAction" icon="MyIcons.jumpActionIcon">
            <add-to-group group-id="CodeEditorBaseGroup" anchor="first"/>
        </action>
        <action id="ViewAction" class="com.github.ccrua.riccijump.action.ViewAction" text="ViewAction"
                description="ViewAction">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
