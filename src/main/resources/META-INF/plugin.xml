<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ccrua.riccijump</id>
    <name>RicciJump</name>
    <vendor>cc-rua</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.java</depends>


    <!--    添加代码依赖-->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.ccrua.riccijump.services.JumpApplicationService"/>
        <projectService serviceImplementation="com.github.ccrua.riccijump.services.JumpProjectService"/>
        <notificationGroup id="Custom Notification Group"
                           displayType="BALLOON"/>
    </extensions>

    <!--    添加代码模板-->
    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="/liveTemplates/javaTemplates.xml"/>
        <liveTemplateContext
                implementation="com.intellij.codeInsight.template.EverywhereContextType"/>
    </extensions>

    <!--    添加ide监听-->
    <applicationListeners>
        <listener class="com.github.ccrua.riccijump.listeners.JumpProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <!--    添加相应动作-->
    <actions>
        <action id="ricci_jump_alter" class="com.github.ccrua.riccijump.action.AlterAction" text="打印hhh"
                description="Alter hhh">
            <add-to-group group-id="HelpMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
        </action>
        <action id="ViewAction" class="com.github.ccrua.riccijump.action.ViewAction" text="Jump To .alpro"
                description="Java jump to .alpro" icon="MyIcons.jumpActionIcon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut first-keystroke="shift ctrl b" keymap="$default"/>
        </action>
        <action id="JumpDealerAction" class="com.github.ccrua.riccijump.action.JumpDealerAction" text="Jump To Dealer"
                description="Protocol jump to dealer" icon="MyIcons.jumpActionIcon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut first-keystroke="shift ctrl b" keymap="$default"/>
        </action>
        <action id="newAlproAction" class="com.github.ccrua.riccijump.action.NewAlproAction" text="Gen Alpro"
                description="生成协议文件" icon="MyIcons.jumpActionIcon">
            <add-to-group group-id="ProjectViewPopupMenu" relative-to-action="WeighingNewGroup" anchor="after"/>
        </action>
    </actions>

</idea-plugin>
